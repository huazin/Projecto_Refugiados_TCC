@model IEnumerable<ProjetoRefugiados.Web.ViewModels.OportunidadeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Oportunidades</h2>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="tabbable col-sm-4 col-xs-12">
            <ul class="nav nav-tabs" id="myTab">
                <li class="active">
                    <a data-toggle="tab" href="#home" aria-expanded="true">
                        <i class="ace-icon fa fa-search"></i>
                        Pesquisa
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade active in">
                    <div class="form-horizontal">
                        <div class="input-group">
                            <div class="form-group">
                                <div class="radio col-xs-6">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" checked value="nome" class="ace form-control">
                                        <span class="lbl">Titulo</span>
                                    </label>
                                </div>
                                <div class="radio col-xs-6">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" value="cpf" class="ace form-control">
                                        <span class="lbl">Empresa</span>
                                    </label>
                                </div>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="ace-icon fa fa-check"></i>
                                </span>
                                <input type="text" id="Id" name="Id" class="form-control search-query" placeholder="Pesquisa">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-purple btn-sm">
                                        <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                                        Search
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<div class="col-xs-12">
    <hr />
</div>
<h3 class="col-sm-12">Abrigos</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p => p.projeto.Tipo == "Abrigo"))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @if (item.Ativo)
                {
                    <a href="~/Oportunidade/Index/?id=@item.OportunidadeId&ativador=1">
                        <i class="menu-icon fa fa-trash"></i>
                        <span class="menu-text">Inativar</span>
                    </a>
                }
                else
                {
                    <a href="~/Oportunidade/Index/?id=@item.OportunidadeId&ativador=0">
                        <i class="menu-icon fa fa-check"></i>
                        <span class="menu-text">Ativar</span>
                    </a>
                } | <a href="~/Oportunidade/Details/@item.OportunidadeId">
                    <i class="menu-icon fa fa-info"></i>
                    <span class="menu-text">Detalhes</span>
                </a> | <a href="~/Oportunidade/Edit/@item.OportunidadeId">
                    <i class="menu-icon fa fa-pencil"></i>
                    <span class="menu-text">Edit</span>
                </a> |<a href="~/Oportunidade/CartaDeEncaminhamento/@item.OportunidadeId">
                    <i class="menu-icon fa fa-plus"></i>
                    <span class="menu-text">Gera Carta de Encaminhamento</span>
                </a>
            </td>
        </tr>
    }
</table>
<div class="col-xs-12">
    <hr />
</div>
<h3>Empresas</h3>

<table class="table">
    <tr>
