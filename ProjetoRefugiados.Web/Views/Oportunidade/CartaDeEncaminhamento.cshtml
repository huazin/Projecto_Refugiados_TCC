@model ProjetoRefugiados.Web.ViewModels.CartaDeEncaminhamentoViewModel

@{
    ViewBag.Title = "CartaDeEncaminhamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CartaDeEncaminhamento</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CartaDeEncaminhamentoViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div hidden>
            @Html.EditorFor(model => model.OportunidadeId, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.id } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-white btn-info btn-bold">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>Criar
            </button>
            | <a href="~/Oportunidade/Index" class="btn btn-white btn-info btn-bold">
                <i class="ace-icon fa fa-undo"></i>Voltar para a lista
            </a>
        </div>
    </div>
}
