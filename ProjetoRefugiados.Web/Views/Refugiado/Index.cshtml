@model IEnumerable<ProjetoRefugiados.Web.ViewModels.RefugiadoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Refugiados</h2>

<p>
    <a href="~/Refugiado/Create">
        <i class="menu-icon fa fa-plus"></i>
        <span class="menu-text">Novo Refugiado</span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NacionalidadeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaisId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascionalidade.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.Nome)
            </td>
            <td>
                <a href="~/Refugiado/Edit/@item.RefugiadoId">
                    <i class="menu-icon fa fa-pencil"></i>
                    <span class="menu-text">Edit</span>
                </a> | <a href="~/Refugiado/Details/@item.RefugiadoId">
                    <i class="menu-icon fa fa-info"></i>
                    <span class="menu-text">Detalhes</span>
                </a> | <a href="~/Refugiado/Delete/@item.RefugiadoId">
                    <i class="menu-icon fa fa-trash"></i>
                    <span class="menu-text">Deletar</span>
                </a>
            </td>
        </tr>
    }
</table>
