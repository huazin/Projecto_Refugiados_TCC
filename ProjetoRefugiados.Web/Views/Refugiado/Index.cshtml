@model IEnumerable<ProjetoRefugiados.Web.ViewModels.RefugiadoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Refugiados</h2>

<p>
    <a href="~/Refugiado/Create">
        <i class="menu-icon fa fa-plus"></i>
        <span class="menu-text">Novo Refugiado</span>
    </a>
</p>
@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="tabbable col-sm-5 col-xs-12">
            <ul class="nav nav-tabs" id="myTab">
                <li class="active">
                    <a data-toggle="tab" href="#home" aria-expanded="true">
                        <i class="ace-icon fa fa-search"></i>
                        Pesquisa
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade active in">
                    <div class="form-horizontal">
                        <div class="input-group">
                            <div class="form-group">
                                <div class="radio col-xs-4">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" checked value="nome" class="ace form-control">
                                        <span class="lbl">Nome</span>
                                    </label>
                                </div>
                                <div class="radio col-xs-4">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" value="cpf" class="ace form-control">
                                        <span class="lbl">CPF</span>
                                    </label>
                                </div>
                                <div class="radio col-xs-4">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" value="prof" class="ace form-control">
                                        <span class="lbl">Profissão</span>
                                    </label>
                                </div>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="ace-icon fa fa-check"></i>
                                </span>
                                <input type="text" id="Id" name="Id" class="form-control search-query" placeholder="Pesquisa">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-purple btn-sm">
                                        <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                                        Buscar
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<div class="col-xs-12">
    <hr />
</div>
<div class="col-xs-12">
    <div class="widget-box" id="widget-box-2" style="opacity: 1;">
        <div class="widget-header">

        </div>

        <div class="widget-body">
            <div class="widget-main no-padding">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thin-border-bottom">
                        <tr>
                            <th>
                                Nome
                            </th>

                            <th>
                                CPF
                            </th>
                            <th class="hidden-480">
                                Sexo
                            </th>
                            <th>
                                Ações
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPF)
                                </td>
                                <td class="hidden-480">
                                    @Html.DisplayFor(modelItem => item.Sexo)
                                </td>
                                <td>
                                    <a href="~/Refugiado/Edit/@item.RefugiadoId">
                                        <i class="menu-icon fa fa-pencil"></i>
                                        <span class="menu-text">Editar</span>
                                    </a> | <a href="~/Refugiado/Details/@item.RefugiadoId">
                                        <i class="menu-icon fa fa-info"></i>
                                        <span class="menu-text">Detalhes</span>
                                    </a> |
                                    @if (item.Ativo)
                {
                                        <a href="~/Refugiado/Index/?id=@item.RefugiadoId&ativador=1">
                                            <i class="menu-icon fa fa-trash"></i>
                                            <span class="menu-text">Inativar</span>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="~/Refugiado/Index/?id=@item.RefugiadoId&ativador=0">
                                            <i class="menu-icon fa fa-check"></i>
                                            <span class="menu-text">Ativar</span>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>