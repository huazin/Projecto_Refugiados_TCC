@model IEnumerable<ProjetoRefugiados.Web.ViewModels.RefugiadoViewModel>

@{
    int Pesquisa = 0;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Refugiados</h2>

<p>
    <a href="~/Refugiado/Create">
        <i class="menu-icon fa fa-plus"></i>
        <span class="menu-text">Novo Refugiado</span>
    </a>
</p>
@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="widget-box collapsed col-sm-4 col-xs-12">
            <div class="widget-header">
                <h4 class="widget-title">Pesquisa</h4>

                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body" style="display: none;">
                <div class="widget-main">
                    <div class="form-horizontal">
                        <div class="input-group">
                            <div class="form-group">
                                <div class="radio col-xs-6">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" checked value ="nome"class="ace form-control">
                                        <span class="lbl">Nome</span>
                                    </label>
                                </div>
                                <div class="radio col-xs-6">
                                    <label>
                                        <input name="Tipo" id="Tipo" type="radio" value="cpf" class="ace form-control">
                                        <span class="lbl">CPF</span>
                                    </label>
                                </div>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="ace-icon fa fa-check"></i>
                                </span>
                                <input type="text" id="Id" name="Id" class="form-control search-query" placeholder="Pesquisa">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-purple btn-sm">
                                        <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                                        Search
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NacionalidadeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaisId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascionalidade.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.Nome)
            </td>
            <td>
                <a href="~/Refugiado/Edit/@item.RefugiadoId">
                    <i class="menu-icon fa fa-pencil"></i>
                    <span class="menu-text">Editar</span>
                </a> | <a href="~/Refugiado/Details/@item.RefugiadoId">
                    <i class="menu-icon fa fa-info"></i>
                    <span class="menu-text">Detalhes</span>
                </a> |
                @if (item.Ativo)
                {
                    <a href="~/Refugiado/Index/?id=@item.RefugiadoId&ativador=1">
                        <i class="menu-icon fa fa-trash"></i>
                        <span class="menu-text">Inativar</span>
                    </a>
                }
                else
                {
                    <a href="~/Refugiado/Index/?id=@item.RefugiadoId&ativador=0">
                        <i class="menu-icon fa fa-check"></i>
                        <span class="menu-text">Ativar</span>
                    </a>
                }
            </td>
        </tr>
    }
</table>
