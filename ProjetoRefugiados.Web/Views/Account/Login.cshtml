@using ProjetoRefugiados.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Efetuar login";
}

<div class="row">
    <div class="col-xs-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Usar uma conta local para efetuar login.</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-sm-8 col-sm-offset-2">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.CPF, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.CPF, new { @class = "form-control input-sm" })
                                        @Html.ValidationMessageFor(m => m.CPF, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>


                                    @*<div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <div class="checkbox">
                                                    @Html.CheckBoxFor(m => m.RememberMe)
                                                    @Html.LabelFor(m => m.RememberMe)
                                                </div>
                                            </div>
                                        </div>*@
                                    <div class="form-group">
                                        <div class="col-sm-offset-1 colsm11 col-md-offset-2 col-md-10">
                                            <button type="submit" value="Efetuar login" class="btn btn-white btn-info btn-bold">
                                                <i class="ace-icon fa fa-user bigger-120 blue"></i>Efetua Login
                                            </button>
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                            @Html.ActionLink("Registrar-se como novo usuário", "Register", new { @class = "control-label" })
                                        </div>*@
                                </div>
                                @* Ativar isso assim que você tiver a confirmação de conta ativada para a funcionalidade de redefinição de senha
                                    <p>
                                        @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")
                                    </p>*@
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}